<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/imageAnimal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/nameAnimal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/imageAnimal"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextAppearance.Material3.TitleLarge"
        tools:text="This is the animal name"/>

    <TextView
        android:id="@+id/locationAnimal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/imageAnimal"
        app:layout_constraintTop_toBottomOf="@id/nameAnimal"
        style="@style/TextAppearance.Material3.TitleSmall"
        tools:text="This a description textview"/>

    <TextView
        android:id="@+id/speedAnimal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/imageAnimal"
        app:layout_constraintTop_toBottomOf="@id/locationAnimal"
        style="@style/TextAppearance.Material3.TitleSmall"
        tools:text="This a description textview"/>

</androidx.constraintlayout.widget.ConstraintLayout>